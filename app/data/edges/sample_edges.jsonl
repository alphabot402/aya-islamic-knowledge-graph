{"id":"edge_shahada_001","version":"1.0","created_at":"2024-11-24T00:00:00Z","nodes":{"source":{"type":"quran_verse","id":"verse_3_18","reference":"3:18","surah":3,"ayah":18,"text_arabic":"شَهِدَ اللَّهُ أَنَّهُ لَا إِلَٰهَ إِلَّا هُوَ وَالْمَلَائِكَةُ وَأُولُو الْعِلْمِ قَائِمًا بِالْقِسْطِ","text_english":"Allah witnesses that there is no deity except Him, and [so do] the angels and those of knowledge - [that He is] maintaining [creation] in justice."},"target":{"type":"hadith","id":"hadith_bukhari_1","collection":"Sahih al-Bukhari","hadith_number":1,"book_number":1,"text_arabic_snippet":"إنما الأعمال بالنيات وإنما لكل امرئ ما نوى","text_english_snippet":"Actions are by intentions, and every person will have what they intended","narrator_chain":"Umar ibn al-Khattab","authentication":"sahih"}},"connection_metadata":{"pillar":"shahada","connection_strength":{"tier":"1","confidence_score":0.98,"strength_label":"explicit"},"connection_type":{"primary":"explicit_citation","linguistic_features":["la ilaha illa","tawhid_declaration"]},"legal_analysis":{"legal_function":"bayan","ruling_type":"fard_ayn"}},"verification":{"status":"manually_verified","verification_date":"2024-11-24T00:00:00Z","sources":[{"type":"classical_tafsir","work":"Tafsir al-Qurtubi","reference":"3:18","author":"Al-Qurtubi"}],"scholarly_consensus":{"consensus_level":"ijma"}},"contextual_metadata":{"thematic_context":{"primary_theme":"Testimony of Faith","secondary_themes":["Tawhid","Divine Justice"],"related_concepts":["concept_tawhid","concept_iman","concept_ikhlas"]}},"weights":{"base_weight":0.90,"components":{"textual_explicitness":0.98,"scholarly_consensus":1.0,"source_authenticity":1.0},"adjusted_weight":0.98,"ranking_score":980},"flags":{"featured":true,"educational_priority":"high"}}
